{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Claude Usage",
  "version": "0.1.0",
  "identifier": "com.panozzaj.claude-usage-bar",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
